rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }
    match /certifications/{allPaths=**} {
    	allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == "gsbenevides2@gmail.com";
    }
    match /projects/{allPaths=**} {
    	allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == "gsbenevides2@gmail.com";
    }
    match /posts/{allPaths=**} {
    	allow read: if resource.data.visible == true || (request.auth != null && request.auth.token.email == "gsbenevides2@gmail.com");
      allow write: if request.auth != null && request.auth.token.email == "gsbenevides2@gmail.com";
    }
    match /links/{allPaths=**} {
    	allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == "gsbenevides2@gmail.com";
    }
    match /storage/{allPaths=**} {
      allow read: if resource.data.visible == true || request.auth.token.email in resource.data.allowedUsers || (request.auth != null && request.auth.token.email == "gsbenevides2@gmail.com");
      allow write: if request.auth != null && request.auth.token.email == "gsbenevides2@gmail.com";
    }
  }
}