rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      allow read, write: if false;
    }
    match /certifications/{allPaths=**} {
    	allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == "gsbenevides2@gmail.com";
    }
    match /projects/{allPaths=**} {
    	allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == "gsbenevides2@gmail.com";
    }
    match /posts/{allPaths=**} {
    	allow read: if request.auth != null && request.auth.token.email == "gsbenevides2@gmail.com";
      allow write: if request.auth != null && request.auth.token.email == "gsbenevides2@gmail.com";
    }
    match /posts/{postId}/{allPaths=**} {
    	allow read: if (firestore.get(/databases/(default)/documents/posts/$(postId)).data.visible == true)
      || (request.auth != null && request.auth.token.email == "gsbenevides2@gmail.com");
      allow write: if request.auth != null && request.auth.token.email == "gsbenevides2@gmail.com";
    }
  }
}